#============================ Build ================================
cmake --build ./build --target clean
cmake --build ./build --config Release -- -j $(nproc)
#============================ Install ==============================
cmake --build ./build --target install -- -j $(nproc)
#make install #for Unix Makefiles
#ninja install #for Ninja
#============================ Test =================================
cd build
ctest -V -j $(nproc)
